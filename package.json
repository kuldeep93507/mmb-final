{
  "name": "mmb-portfolio-full-stack",
  "version": "0.1.0",
  "private": true,
  "description": "Full-stack portfolio application with React frontend and FastAPI backend",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "pip install -r backend/requirements.txt",
    "install": "npm run install:frontend && npm run install:backend",
    "build": "cd frontend && npm install && npm run build",
    "start": "uv run uvicorn backend.server:app --host 0.0.0.0 --port ${PORT:-5000}",
    "start:backend": "cd backend && python server.py",
    "start:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && uvicorn server:app --host 0.0.0.0 --port 8001 --reload",
    "dev:frontend": "cd frontend && npm start",
    "dev": "npm run dev:backend",
    "test:frontend": "cd frontend && npm test",
    "test": "npm run test:frontend"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}